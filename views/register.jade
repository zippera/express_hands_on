extends layout

block content
    h1 Register
    form(method='post')
        div
            Label Name:
            input(type='text', name='name')
        div 
            label Email:
            input(type='text', name='email')
        div
            label Password:
            input(type='password', name='password')
        div
            label Password again:
            input(type='password', name='password-repeat')
        div
            input(type='submit', value='submit')
